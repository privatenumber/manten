{
	"name": "manten",
	"version": "0.0.0-semantic-release",
	"description": "満点 - Lightweight testing library for Node.js",
	"license": "MIT",
	"author": "Hiroki Osame <hiroki.osame@gmail.com>",
	"type": "module",
	"files": [
		"dist"
	],
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"scripts": {
		"build": "tsc",
		"test": "esmo tests/index.ts",
		"lint": "eslint ."
	},
	"dependencies": {
		"expect": "^27.5.1"
	},
	"devDependencies": {
		"@pvtnbr/eslint-config": "^0.14.1",
		"@types/node": "^17.0.18",
		"cleye": "^1.1.0",
		"eslint": "^8.9.0",
		"esmo": "^0.14.1",
		"execa": "^6.1.0",
		"kleur": "^4.1.4",
		"typescript": "^4.5.5"
	},
	"eslintConfig": {
		"extends": "@pvtnbr",
		"rules": {
			"@typescript-eslint/no-shadow": [
				"error",
				{
					"allow": [
						"describe",
						"test"
					]
				}
			],
			"no-shadow": [
				"error",
				{
					"allow": [
						"describe",
						"test"
					]
				}
			]
		}
	}
}
