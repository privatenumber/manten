{
	"name": "manten",
	"version": "0.0.0-semantic-release",
	"description": "満点 - Lightweight testing library for Node.js",
	"keywords": [
		"node",
		"testing",
		"test",
		"async",
		"library"
	],
	"license": "MIT",
	"repository": "privatenumber/manten",
	"author": {
		"name": "Hiroki Osame",
		"email": "hiroki.osame@gmail.com"
	},
	"type": "module",
	"files": [
		"dist"
	],
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"scripts": {
		"build": "pkgroll --minify",
		"pretest": "npm run build",
		"test": "tsx tests/index.ts",
		"lint": "eslint ."
	},
	"dependencies": {
		"expect": "^27.5.1"
	},
	"devDependencies": {
		"@pvtnbr/eslint-config": "^0.23.1",
		"@types/node": "^17.0.18",
		"cleye": "^1.1.0",
		"eslint": "^8.18.0",
		"execa": "^6.1.0",
		"kleur": "^4.1.4",
		"pkgroll": "^1.3.0",
		"tsx": "^3.6.0",
		"typescript": "^4.7.4"
	},
	"eslintConfig": {
		"extends": "@pvtnbr",
		"rules": {
			"@typescript-eslint/no-shadow": [
				"error",
				{
					"allow": [
						"describe",
						"test"
					]
				}
			],
			"no-shadow": [
				"error",
				{
					"allow": [
						"describe",
						"test"
					]
				}
			]
		}
	}
}
