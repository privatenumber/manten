{
	"name": "manten",
	"version": "0.0.0-semantic-release",
	"description": "満点 - Lightweight testing library for Node.js",
	"keywords": [
		"node",
		"testing",
		"test",
		"async",
		"library"
	],
	"license": "MIT",
	"repository": "privatenumber/manten",
	"author": {
		"name": "Hiroki Osame",
		"email": "hiroki.osame@gmail.com"
	},
	"files": [
		"dist",
		"skills"
	],
	"type": "module",
	"exports": {
		"types": "./dist/index.d.mts",
		"default": "./dist/index.mjs"
	},
	"imports": {
		"#manten": {
			"types": "./src/index.ts",
			"development": "./src/index.ts",
			"default": "./dist/index.mjs"
		}
	},
	"packageManager": "pnpm@10.23.0+sha512.21c4e5698002ade97e4efe8b8b4a89a8de3c85a37919f957e7a0f30f38fbc5bbdd05980ffe29179b2fb6e6e691242e098d945d1601772cad0fef5fb6411e2a4b",
	"scripts": {
		"build": "pkgroll --clean-dist --minify",
		"test": "node tests/index.ts",
		"lint": "lintroll --git --cache",
		"type-check": "tsc",
		"dev": "node --watch -C development tests/index.ts",
		"prepack": "pnpm build && clean-pkg-json"
	},
	"engines": {
		"node": ">=20.20.0"
	},
	"dependencies": {
		"expect": "^30.2.0"
	},
	"devDependencies": {
		"@types/node": "^24.10.1",
		"ansis": "^4.2.0",
		"clean-pkg-json": "^1.3.0",
		"concurrently": "^9.2.1",
		"expect-type": "^1.2.2",
		"fs-fixture": "^2.11.0",
		"lintroll": "^1.24.4",
		"nano-spawn": "^2.0.0",
		"pkgroll": "^2.21.1",
		"pretty-ms": "^9.3.0",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
	}
}
